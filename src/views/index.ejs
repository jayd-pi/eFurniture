<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <% if (typeof error !== 'undefined') { %>
    <div class="alert alert-danger" role="alert"><%= error %></div>
    <% } %>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <a href="/logout" class="btn btn-danger">Logout</a>
          <button
            type="button"
            class="btn btn-primary"
            data-bs-toggle="modal"
            data-bs-target="#exampleModal"
          >
            Add Coupon
          </button>
          <div
            class="modal fade"
            id="exampleModal"
            tabindex="-1"
            aria-labelledby="exampleModalLabel"
            aria-hidden="true"
          >
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Add Coupon</h5>
                </div>
                <div class="modal-body">
                  <form method="POST">
                    <div class="mb-3">
                      <label for="name" class="form-label">Coupon Name</label>
                      <input
                        type="text"
                        class="form-control"
                        id="name"
                        name="name"
                        placeholder="Input coupon Name"
                        required
                      />
                      <label for="expiry" class="form-label">Expiry</label>
                      <input
                        type="date"
                        class="form-control"
                        id="expiry"
                        name="expiry"
                        placeholder="Input expiry"
                        required
                      />
                      <label for="discount" class="form-label">Discount</label>
                      <input
                        type="number"
                        class="form-control"
                        id="discount"
                        name="discount"
                        placeholder="Input discount"
                        required
                      />
                    </div>
                    <button type="submit" class="btn btn-primary">
                      Submit
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>

          <table
            class="table table-bordered table-striped table-hover"
            style="margin-top: 1rem"
          >
            <thead>
              <tr>
                <th scope="col">Coupon Name</th>
                <th scope="col">Expiry</th>
                <th scope="col">Discount</th>
              </tr>
            </thead>
            <tbody>
              <% coupons.forEach(function(coupons, index){ %>
              <tr>
                <td><%= coupons.name %></td>
                <td><%= coupons.expiry %></td>
                <td><%= coupons.discount %></td>
                <td>
                  <div id="actionButton<%= index %>">
                    <a
                      href="/delete/<%= coupons._id %>"
                      class="btn btn-danger"
                      onclick="return confirm('Confirm to delete?')"
                      >Delete</a
                    >
                    <a href="/edit/<%= coupons._id %>" class="btn btn-warning"
                      >Edit</a
                    >
                  </div>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
